<%- include("partials/header.ejs") %>

<form class="form edit-form" action="/edit_content" method="POST">  <h2>Which blog to update?</h2>
    <fieldset>
        <label for="title">Title</label>
        <select name="title" class="edit-select"> <option value="" selected>Choose one</option>
            <% items.forEach(function(item) {%>
                <option value="<%= item.title  %>">
                    <%= item.title %>
                </option>
                <% }); %>
        </select>
        <label for="author">Author</label>
        <select name="author" class="edit-select"> <option value="" selected>Choose one</option>
            <% items.forEach(function(item) {%>
                <option value="<%= item.author  %>">
                    <%= item.author %>
                </option>
                <% }); %>
        </select>
        <button value="submit" name="submit" class="edit-button">Submit</button>  </fieldset>
</form>

