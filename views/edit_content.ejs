<%- include("partials/header.ejs") %>
<form class="form" action="/updated_updated_home" method="POST">
    <h2>Update the blog!</h2>
    <fieldset>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= title  %>" placeholder="Enter the blog's title">
        <label for="author">Author</label>
        <input type="text" name="author" value="<%= author %>" placeholder="Enter the author's name">
        <label for="content">Content</label>
        <textarea name="content"  cols="30" rows="10" placeholder="Enter the blog's content..."><%= content %></textarea>
        <button  value="submit" name="submit">Submit</button>
    </fieldset>
</form>
<%- include("partials/footer.ejs")  %>